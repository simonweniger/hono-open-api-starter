{
  // Enable Biome as the default formatter
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "biomejs.biome",

  // Disable other formatters
  "prettier.enable": false,
  "editor.formatOnSaveMode": "file",

  // Biome settings
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "biomejs.biome"
  },

  "cSpell.words": [
    "Hono",
    "openapi",
    "Bun",
    "bunx",
    "elysia",
    "drizzle",
    "biome"
  ]
}
